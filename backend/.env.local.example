# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local for local development
# DO NOT use these settings in production!

# Django Settings
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (SQLite for local development)
DATABASE_ENGINE=sqlite3
# SQLite database will be created as db.sqlite3 in the backend directory

# CORS Settings (for local development with React/Next.js)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Google Maps API (optional for local development)
GOOGLE_MAPS_API_KEY=YOUR_DEV_API_KEY_HERE

# Redis Configuration (for WebSocket and Celery - optional for local dev)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (console backend for local development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Admin Email
ADMIN_EMAIL=dev@localhost

# Development Notes:
# - DEBUG=True enables Django debug toolbar and detailed error pages
# - SQLite is sufficient for local development
# - CORS allows frontend on localhost:3000 to communicate with backend
# - Email will print to console instead of sending real emails
